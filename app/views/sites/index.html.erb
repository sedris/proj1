<h1>Listing sites</h1>

<table>
  <tr>
	<th>ID</th>
    <th>Name</th>
    <th>Visits</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
	<td><%= site.id %></td>
    <td><%= site.name %></td>
    <td><%= site.visits %></td>
	<td><%= link_to 'Visit', visits_path(site) %></td>
    <!--<td><%= link_to 'Show', site %></td>-->
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

